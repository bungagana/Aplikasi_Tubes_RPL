<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdis"
    android:id="@+id/disFrame"
    tools:context=".Disability">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/profontbold"
      android:text="Beranda"
      android:layout_marginTop="50dp"
      android:layout_gravity="start"
      android:layout_marginLeft="30dp"
      android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/profontreg"
        android:gravity="start"
        android:text="Selamat datang di Aplikasi Eliterasi. Termukan berbagai hal menarik melalui beberapa fitur yang tersedia."
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/discovbtn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="10dp"
            android:onClick="discovBtn"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#F1F1F1"
            app:cardElevation="3dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/looking"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/profontbold"
                    android:text="Jelajahi"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/profontreg"
                    android:text="jelajahi karya sastra "
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/aktivitas"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="10dp"
            android:clickable="true"
            android:onClick="creavyBtn"
            android:focusable="true"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#F1F1F1"
            app:cardElevation="3dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/story"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/profontbold"
                    android:text="Aktivitas"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/profontreg"
                    android:text="buat sebuah karya"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/keluarbtn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="10dp"
            android:onClick="keluarBtn"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#F1F1F1"
            app:cardElevation="3dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/exit"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:fontFamily="@font/profontbold"
                    android:gravity="center_horizontal"
                    android:text="Keluar"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/profontreg"
                    android:text="keluar dari mode ini"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>